        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaptureOneWindowControl"
        mc:Ignorable="d"
        Title="Link One" Height="450" Width="800"
        Background="#1f2223"
        >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontFamily="Calibri" FontSize="100" Foreground="DodgerBlue">Link One</TextBlock>
